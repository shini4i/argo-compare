{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "ignorePaths": [
    "go.mod",
    "go.sum"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ENV DIFF_SO_FANCY_VERSION=(?<currentValue>.*)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "so-fancy/diff-so-fancy",
      "extractVersionTemplate": "v(?<version>.*)$"
    }
  ],
  "automerge": true,
  "stabilityDays": 1,
  "prCreation": "not-pending",
  "platformAutomerge": true
}
